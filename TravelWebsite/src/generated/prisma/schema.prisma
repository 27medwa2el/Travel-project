generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Country {
  id        String   @id @default(cuid())
  name      String
  code      String?  @unique // ISO country code
  continent String?
  cities    City[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model City {
  id               String                @id @default(cuid())
  countryId        String
  country          Country               @relation(fields: [countryId], references: [id], onDelete: Cascade)
  name             String
  lat              Float
  lng              Float
  images           String[]
  timezone         String?
  currency         String?
  language         String?
  tips             CityTip[]
  documents        CityDocument[]
  recommendedItems CityRecommendedItem[]
  events           CityEvent[]
  cars             CityCar[]
  tourGuides       CityTourGuide[]
  applications     CityApplication[]
  activities       Activity[]
  drivers          Driver[]
  tripCities       TripCity[]
  createdAt        DateTime              @default(now())
  updatedAt        DateTime              @updatedAt
}

model CityTip {
  id        String   @id @default(cuid())
  cityId    String
  city      City     @relation(fields: [cityId], references: [id], onDelete: Cascade)
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CityDocument {
  id         String   @id @default(cuid())
  cityId     String
  city       City     @relation(fields: [cityId], references: [id], onDelete: Cascade)
  name       String
  exampleUrl String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model CityRecommendedItem {
  id        String   @id @default(cuid())
  cityId    String
  city      City     @relation(fields: [cityId], references: [id], onDelete: Cascade)
  name      String
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CityEvent {
  id          String     @id @default(cuid())
  cityId      String
  city        City       @relation(fields: [cityId], references: [id], onDelete: Cascade)
  title       String
  description String
  date        String
  location    String
  lat         Float
  lng         Float
  imageUrl    String?
  bookingUrl  String?
  tripItems   TripItem[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model CityCar {
  id          String   @id @default(cuid())
  cityId      String
  city        City     @relation(fields: [cityId], references: [id], onDelete: Cascade)
  name        String
  type        String
  pricePerDay Float
  transmission String
  fuel        String
  contactInfo String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model CityTourGuide {
  id           String   @id @default(cuid())
  cityId       String
  city         City     @relation(fields: [cityId], references: [id], onDelete: Cascade)
  name         String
  bio          String
  languages    String[]
  pricePerHour Float
  rating       Float
  contactInfo  String?
  imageUrl     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model CityApplication {
  id          String   @id @default(cuid())
  cityId      String
  city        City     @relation(fields: [cityId], references: [id], onDelete: Cascade)
  name        String
  description String
  iconUrl     String?
  androidLink String?
  iphoneLink  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Activity {
  id          String     @id @default(cuid())
  cityId      String
  city        City       @relation(fields: [cityId], references: [id], onDelete: Cascade)
  title       String
  description String?
  price       Float?
  currency    String?
  lat         Float
  lng         Float
  images      String[]
  tags        String[]
  bookingUrl  String?
  tripItems   TripItem[]
  bookings    Booking[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Driver {
  id          String    @id @default(cuid())
  cityId      String
  city        City      @relation(fields: [cityId], references: [id], onDelete: Cascade)
  name        String
  phone       String?
  contactInfo String?
  pricePerDay Float?
  vehicleType String?
  rating      Float?
  bookings    Booking[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Trip {
  id          String            @id @default(cuid())
  userId      String // Clerk User ID
  title       String
  startDate   String
  endDate     String
  status      String // upcoming, active, completed
  progress    Float             @default(0)
  countryId   String
  cities      TripCity[]
  packingList TripPackingItem[]
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
}

model TripCity {
  id        String     @id @default(cuid())
  tripId    String
  trip      Trip       @relation(fields: [tripId], references: [id], onDelete: Cascade)
  cityId    String
  city      City       @relation(fields: [cityId], references: [id], onDelete: Cascade)
  startDate String
  endDate   String
  items     TripItem[]
}

model TripItem {
  id          String     @id @default(cuid())
  tripCityId  String
  tripCity    TripCity   @relation(fields: [tripCityId], references: [id], onDelete: Cascade)
  type        String // ACTIVITY or EVENT
  referenceId String // activityId or eventId
  date        String
  startTime   String?
  endTime     String?
  activity    Activity?  @relation(fields: [referenceId], references: [id], map: "TripItem_activityId_fkey")
  event       CityEvent? @relation(fields: [referenceId], references: [id], map: "TripItem_eventId_fkey")

  @@index([referenceId])
}

model TripPackingItem {
  id          String   @id @default(cuid())
  tripId      String
  trip        Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  cityId      String?
  title       String
  description String?
  category    String // document, product, app, custom
  isPacked    Boolean  @default(false)
  referenceId String? // ID of source document/item/app
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Booking {
  id          String    @id @default(cuid())
  userId      String // Clerk User ID
  type        String // ACTIVITY or DRIVER
  referenceId String // activityId or driverId
  date        String
  status      String // confirmed, pending, cancelled
  price       Float
  currency    String
  activity    Activity? @relation(fields: [referenceId], references: [id], map: "Booking_activityId_fkey")
  driver      Driver?   @relation(fields: [referenceId], references: [id], map: "Booking_driverId_fkey")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([referenceId])
}

model AppSettings {
  id                Int    @id @default(1)
  standardCityPrice Float  @default(250)
  currency          String @default("USD")
}
